<h1><%= @list.name %> - <small><%= @list.author %></small></h1>
<%= link_to "Edit list", edit_list_path %>
<%= link_to "Delete List",
    list_path(@list),
    data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
    %>
<h2><%= pluralize @list.items.size, "itens" %></h2>
<div>
  <% if @list.items.blank? %>
    Adicione um item para a lista!
  <% else %>
    <% @list.items.each do |item| %>
      <p><%= item.title %> - <%= item.description %></p>
    <% end %>
  <% end %>
</div>
<%= simple_form_for([@list, @item]) do |f| %>
  <%= f.input :title %>
  <%= f.input :description %>
  <%= f.button :submit %>
<% end %>
<%= link_to "Back to all lists", lists_path %>
