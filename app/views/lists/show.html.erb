<div class="container">
  <div class="d-flex align-items-end">
    <h1><%= @list.name %></h1>
    <p class="mx-2">- <%= @list.author %></p>
  </div>
  <div class="d-flex align-items-center">
    <%= link_to "Edit list", edit_list_path, class: "btn btn-primary" %>
    <%= link_to "Delete List", list_path(@list), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: "btn btn-primary mx-2"%></div>
  <div>
    <% if @list.items.blank? %>
      <h2>Adicione um item para a lista!</h2>
    <% else %>
      <% @list.items.each do |item| %>
        <h2><%= item.title %></h2>
        <p><%= item.description %></p>
      <% end %>
    <% end %>
  </div>
  <div class="container">
    <h2>Add a new Item!</h2>
    <%= simple_form_for([@list, @item]) do |f| %>
      <%= f.input :title %>
      <%= f.input :description %>
      <div class="d-flex justify-content-between align-items-center">
        <%= f.button :submit, class: "btn btn-primary" %>
        <%= link_to "Back to all lists", lists_path, class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>
